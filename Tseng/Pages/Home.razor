@page "/"
@using System.Net.Mime
@inject IJSRuntime JSRuntime

<FF7Window Fill="true">
    <div style="text-align:center">
        <FF7Connection/>
    </div>

    <h2>OBS Parts</h2>
    <hr/>
    <label>Party List
        <input type="text" readonly="readonly" value="http://localhost:7777/party" style="width: 600px; background: #454545"/>
        <button @onclick="CopyPartyLink">Copy</button>
    </label>
</FF7Window>
    

@code
{
    private async Task CopyPartyLink()
    {
        await CopyTextToClipboard("http://localhost:7777/party");
    }

    private async Task CopyTextToClipboard(string text)
    {
        await JSRuntime.InvokeVoidAsync("clipboardCopy.copyText", text);
    }
}
